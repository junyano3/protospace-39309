
<div class="card">

<%= link_to prototype_path(prototype.id), method: :get do %>
      <%= image_tag(prototype.image, class: :card__img) if prototype.image.attached? %>
    <% end %>

    <%# プロトタイプ名 (タイトル)%>
  <div class="card__body">
    <%= link_to prototype.title,prototype_path(prototype.id), method: :get , class: :card__title%>
     <%# プロトタイプキャッチコピー %>
    <p class="card__summary">
       <%= prototype.catch_copy %>
    </p>
    <%# プロトタイプのユーザーネーム %>
    <%= link_to "by#{prototype.user.name}", user_path(prototype.user) , class: :card__user %>
   
  </div>  

</div>
